@model IEnumerable<Book>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Books List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Books" asp-action="Create" class="btn btn-primary">
               Add New Book
            </a>
        </div>
    </div>
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Book ID
            </th>
            <th>
                Book Name
            </th>
            <th>
                Category
            </th>
            <th>
                Description
            </th>
            <th>

            </th>
        </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.BookId
                </td>
                <td>
                    @obj.Category
                </td>
                <td>
                    @obj.BookName
                </td>
                <td>
                    @obj.Description
                </td>
                <td>
                    <div class="w-75 btnbtn-group" role="group">
                            <a asp-controller="Books" asp-action="Edit" asp-route-id="@obj.BookId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>
